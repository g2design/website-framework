<nav class="top-nav">
	<div class="nav-wrapper">
		<a class="page-title">{{ title }}</a>

		{% if buttons %}

			<ul class="right hide-on-med-and-down">
				{% for button in buttons %}
					<li>
						<a href="{{ button.action }}" class="btn">{{ button.label }}</a>
					</li>
				{% endfor %}
			</ul>

		{% endif %}

	</div>
</nav>

{% if content %}

	{% for body in content %}
		<section class="card-panel">

			{% if body.title %}
				<div class="card-image">
					<div class="card-title">{{ body.title }}</div>
				</div>
			{% endif %}
			<div class="card-content">
				{{ body.content }}
			</div>
		</section>
	{% endfor %}

{% endif %}

{% if dashitems %}

	<div class="row">
		{% for body in dashitems %}
			<div class="col s4">
				<section class="card-panel ">

					{% if body.title %}
						<div class="card-image">
							{%if body.image %}
								<img src="{{body.image}}" alt="Body Image">
							{% endif %}
							<div class="card-title">{{ body.title }}</div>
						</div>
					{% endif %}
					<div class="card-content">
						{{ body.content }}
					</div>

					{% if body.actions %}
						<div class="card-actions">
							{% for action in body.actions %}
								<a class="btn" href="{{ action.url }}">{{ action.label }}</a>
							{% endfor %}
						</div>
					{% endif %}
				</section>
			</div>
		{% endfor %}
	</div>

{% endif %}