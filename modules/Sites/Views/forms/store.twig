{% import "macros/forms.twig" as form %}

<form action="" method="POST">
	<div class="row">
		<div class="col s2">
			<div class="row">
				<div class="input-field">
					<input type="text" name="shopNumber" id="shopNumber">
					<label for="shopNumber">Shop Number</label>
				</div>
			</div>
		</div>
		<div class="col s10">
			<div class="row">{{ form.input('name') }}</div>
		</div>
		
	</div>
	

	<div class="row">{{ form.input('tel') }}</div>
	{#<div class="row">{{ form.file('picture') }}</div>
	{% if logo %}
		<div class="row">
			<div class="col s4 offset-s4"><img class="responsive-img "src="{{ logo.url }}" alt="Logo"></div>
		</div>
	{% endif %}#}
	<div class="row">
		<label for="">Description</label>
		<textarea name="description" id=""></textarea>
	</div>
	<div class="row">

		<div class="input-field col s12">
			<div class="chips" data-target='#Tags' data-availabletags='{{ categories }}'>
			</div>
			<label for="Tags">Categories</label>
		</div>
		<input id="Tags" type="text" name="categories" class="hide">


	</div>

	<div class="row">{{ form.button('Save') }}</div>

