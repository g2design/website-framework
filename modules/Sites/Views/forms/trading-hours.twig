<form method="post" action="">
	{% set days = [ 'monday','tuesday', 'wednesday', 'thursday', 'friday', 'saterday','sunday' ] %}
	{% for day in days %}
		<div class="row">
			<div class="col s12">
				<div class="col s12">{{ day | title }}:</div>
				<div class="col s4">
					<div class="input-field inline">
						<input class="timepicker" id="{{ day }}-open" type="text" name="{{ day }}[open]">
						<label for="{{ day }}-open">Opening Time</label>
					</div>
					<div class="input-field inline">
						<input class="timepicker" id="{{ day }}-close" type="text" name="{{ day }}[close]">
						<label for="{{ day }}-close">Closing Time</label>
					</div>
				</div>
				<div class="col s2">
					<button class="timeclear btn">Clear</button>
				</div>

			</div>
		</div>	
	{% endfor %}
	<div class="row">
		<div class="col s12">
			<div class="col s12">Public Holidays:</div>
			<div class="col s12">
				<div class="input-field inline">
					<input class="timepicker" id="public-open" type="text" name="public[open]">
					<label for="public-open">Opening Time</label>
				</div>
				<div class="input-field inline">
					<input class="timepicker" id="public-close" type="text" name="public[close]">
					<label for="public-close">Closing Time</label>
				</div>
			</div>
			<div class="col s2">
				<button class="timeclear btn">Clear</button>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="input-field inline">
			<button class= "btn" type="submit">Save</button>
		</div>
	</div>
</form>